<?xml version='1.0' encoding='utf-8'?>
<widget id="com.opratel.opraTest" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>opraTest</name>
    <description>
        Aplicacion para el uso de la compa√±ia Opratel 
    </description>
    <author email="ramiro.portas@gmail.com" href="http://cordova.io">
        ramiro ariel portas
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <allow-navigation href="*" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <preference name="Fullscreen" value="true" />
    <preference name="BackgroundColor" value="#212121"/>
    <preference name="Orientation" value="portrait" />
</widget>